{
  "extends": ["next", "prettier"],
  "plugins": ["filenames-simple"],
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "patterns": ["@mui/*/*/*"]
      }
    ]
  },
  "overrides": [
    {
      "files": ["./src/components/**/*.tsx", "./src/providers/**/*.tsx"],
      "rules": {
        "filenames-simple/naming-convention": [
          "error",
          {
            "rule": "PascalCase",
            "excepts": ["index"]
          }
        ]
      }
    },
    {
      "files": [".eslintrc.json", "package.json", "package-lock.json", ".lintstagedrc.js"],
      "rules": {
        "filenames-simple/naming-convention": "off",
        "semi": "off"
      }
    }
  ]
}
